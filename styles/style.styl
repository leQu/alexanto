body {
  background-image: url("/build/css/images/wavegrid.png");
  background-color: #e6f0eb;
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
  width: 100%;
}

.appdiv {
  width: 100%;
}

.nav{
  width: 100%;
  background-image: url("/build/css/images/wavegrid.png");
  position: fixed;
  top: 20px;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index:100;
  margin-top: 10px;
  padding-top: 25px;
}

.menu {
  width: 70%
  margin: 0 auto;

  h1 {
    width: 190px;
    text-align: right;
    float: left;
    margin-right: 10px;
    margin-top: 0px;
    font-weight: 900;
    font-size: 28px; 
    color: #434445;
  }

  ul {
    background-image: url("/build/css/images/white_carbon.png");
    background-color: #fff;
    border: 2px solid #dedede;
    border-radius: 4px;
    overflow: hidden;
    display: block;
    box-shadow: 0 4px 4px -3px rgba(0, 0, 0, 0.055);
    color: #888;
    margin: 0;
    padding: 0px;

    li {
      width: 25%;
      text-align: center;
      display: inline-block;
      list-style-type: none;
      -webkit-transition: all 0.2s;
      -moz-transition: all 0.2s;
      -ms-transition: all 0.2s;
      -o-transition: all 0.2s;
      transition: all 0.2s; 

      a {
        color: #434445;
        display: block;
        line-height: 56px;
        padding: 0 24px;
        text-decoration: none;
        font-size: 14px;
        font-weight: bold;
      }
    }

    li:last-child{
      display: none;
    }

    li:hover {
      background-color: rgb(226, 182, 182);
      cursor: pointer;

      a {
        color: rgb( 255, 255, 255 );
      }
    }
  }
}

.carousel{
  width: 80%;
  margin 0 auto;
  margin-top: 110px;
  height: 310px;
  margin-bottom: 40px;
  -moz-box-shadow: 0 0 20px #000000;
  -webkit-box-shadow: 0 0 20px #000000;
  box-shadow: 0 5px 20px #000000;

  img {
    max-height: 310px;  
    max-width: 100%; 
    top: 0;  
    bottom: 0;  
    left: 0;  
    right: 0;  
    margin: 0 auto;
  }
}

.pillars {
  width: 80%;
  height: 400px;
  margin: 0 auto;
  color: #434445;

  section {
    text-align: center;
    display: block;
    float: left;
    width: 32.7%;
    height: 200px;
    margin: 0 auto;
    margin-left: 0.3%;
    margin-right: 0.3%;
    margin-top: 50px;

    img {
      width: 150px;
      height: 150px;
      border-radius: 150px;
      -webkit-border-radius: 150px;
      -moz-border-radius: 150px;
      box-shadow: 0 0 8px rgba(0, 0, 0, .8);
      -webkit-box-shadow: 0 0 8px rgba(0, 0, 0, .8);
      -moz-box-shadow: 0 0 8px rgba(0, 0, 0, .8);
    }

    h1 {
      font-size: 23px;
      font-weight: bold;
    }

    hr { 
      width: 70%;
      display: block;
      margin-top: 10px;
      margin-bottom: 0px;
      margin-left: auto;
      margin-right: auto;
      border-style: inset;
      border-width: 1px;
    }

    p {
      text-align: justify;
      margin: 10px;
    }
  }
}

.about_page{
  margin: 0 auto;
  margin-top: 40px;
  margin-bottom: 200px;
  width: 80%;
  height: 700px;
  padding-top: 30px;
  
  .perinfo{
    width: 45%;
    display: block;
    float: left;
    margin-right: 10px;
    h1{
      text-align: right;
      margin: 0;
      width: 100%;
    }
    p {
      text-align: justify;
      width: 100%;
    }
  }
  img {
    width:50%;
    height: auto;
  }
}

.contact {
  width: 100%
  height: 300px;
  -moz-box-shadow: inset 0 0 20px #000000;
  -webkit-box-shadow: inset 0 0 20px #000000;
  box-shadow: inset 0 5px 20px #000000;
  background-image: url("/build/css/images/gray_sand.png");
}

@media screen and (max-width:850px){

  .menu {
    h1 {
      font-size: 18px;
      margin-top: 10px;
    }
    ul {
      width: 100%;
    }
  }
}

@media screen and (max-width:570px) {

  .carousel{
    height: 30%;
  }

  .about_page{
    padding-top: 10px;
  }

  .pillars{
    display: block;
    width: 100%;
    height: 950px;
    margin: 0 auto;

    section{
      width: 100%;
      height: auto;
      margin-top: 20px;
    }
    section:first-child {
      margin-top: 90px;
    }
  }

  .nav {
    width: 100%;
    .menu {
      width: 100%;
      margin: 0 auto;
      ul { 
        width: 100%;
        margin: 0;
        li:not(:first-child) {
          display: none;
        }

        li:last-child {
          display: inline-block;
          float: right;
          width: 40%;
        }

        li:first-child {
          display: inline-block;
          width: 60%;
        }

      }
      ul.responsive{
        background-image: url("/build/css/images/white_carbon.png");
        width: 100%;
        margin: 0;
        padding:0;
        position: fixed;

        li:not(:last-child) {
          width: 50%;
          float: none;
          display: inline;
          a {
            display: block;
            text-align: left;
          }
        }
        li:last-child {
          position: fixed;          
          right: 0;
          top: 30px;
          width: 20%;
        }
      }
    }
  }
}

@media screen and (min-width:1125px) {
  .appdiv{
    margin: 0 auto;
    width: 1125px;

    .nav{
      width: 1125px;
    }
  }
}
