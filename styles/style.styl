body {
  background-image: url("/build/css/images/wavegrid.png");
  background-color: #e6f0eb;
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
  width: 100%;
}

.appdiv {
  width: 100%;
}

.nav{
  width: 100%;
  background: #f2f0ee;
  
  -moz-box-shadow: 0 5px 200px #515151;
  -webkit-box-shadow: 0 5px 200px #515151;
  box-shadow: 0 0px 250px #515151;

  position: fixed;
  top: 0px;

  z-index:100;
  padding-top: 7px;
}

.menu {
  width: 70%
  margin: 0 auto;

  h1 {
    width: 190px;
    text-align: right;
    float: left;
    margin-right: 10px;
    margin-top: 0px;
    font-weight: 900;
    font-size: 30px; 
    color: #434445;
    font-family: 'Fjalla One';
  }

  ul {
    overflow: hidden;
    display: block;
    color: #888;
    margin: 0;
    padding: 0px;
    padding-top: 6px;

    li {
      width: 25%;
      text-align: center;
      display: inline-block;
      list-style-type: none;
      -webkit-transition: all 0.2s;
      -moz-transition: all 0.2s;
      -ms-transition: all 0.2s;
      -o-transition: all 0.2s;
      transition: all 0.2s; 

      a {
        color: #434445;
        display: block;
        line-height: 56px;
        padding: 0 24px;
        text-decoration: none;
        font-size: 14px;
        font-weight: bold;
      }
    }

    li:last-child{
      display: none;
    }

    li:hover {
      background-color: rgb(226, 182, 182);
      cursor: pointer;

      a {
        color: rgb( 255, 255, 255 );
      }
    }
  }
}

.carousel{
  width: 80%;
  margin 0 auto;
  margin-top: 130px;
  height: 400px;
  margin-bottom: 40px;
  -moz-box-shadow: 0 0 20px #000000;
  -webkit-box-shadow: 0 0 20px #000000;
  box-shadow: 0 5px 20px #000000;
  
  img{
    max-height: 400px;  
    max-width: 100%; 
    top: 0;  
    bottom: 0;  
    left: 0;  
    right: 0;  
    margin: 0 auto;
  }
}

.pillars {
  width: 75%;
  height: 400px;
  margin: 0 auto;
  color: #434445;
  font-family: 'Varela Round';

  section {
    text-align: center;
    display: block;
    float: left;
    width: 33.3%;
    height: 300px;
    margin: 0 auto;
    padding-top: 30px;
    margin-top: 10px;
    background-color: white;

    img {
      width: 100px;
      height: 100px;
      border-radius: 150px;
      -webkit-border-radius: 150px;
      -moz-border-radius: 150px;
    }

    h1 {
      font-size: 23px;

    }

    hr { 
      width: 70%;
      display: block;
      margin-top: 10px;
      margin-bottom: 0px;
      margin-left: auto;
      margin-right: auto;
      border-style: inset;
      border-width: 1px;
    }

    p {
      text-align: justify;
      margin: 10px;
      padding: 0 10px 0 10px;
    }
  }
  
  section:first-child {
    background-color: #eeeeee;
  }
  
  section:last-child {
    background-color: #f7f7f7;
  }

}

.about_page{
  margin: 0 auto;
  margin-top: 85px;
  margin-bottom: 200px;
  width: 80%;
  height: 700px;
  padding-top: 30px;
  
  img {
    width:50%;
    height: auto;
  }
}

.perinfo{
  width: 45%;
  display: block;
  float: left;
  margin-right: 10px;
  h1{
    text-align: left;
    margin: 0;
    margin-left: 20px;
    width: 100%;
    font-family: 'Varela Round';
    font-style: normal;
    font-weight: 400;
  }
  hr{
    width: 90%;
    margin: 0;
    border-style: inset;
    border-width: 1px;
    margin-top: 10px;
    margin-bottom: 10px;
  }
  p {
    margin: 0 auto;
    font-family: 'Varela Round';
    font-style: normal;
    width: 95%;
    font-size: 17px;
  }
}

.contact {
  font-family: 'Varela Round';
  width: 100%
  height: 250px;
  -moz-box-shadow: inset 0 0 20px #000000;
  -webkit-box-shadow: inset 0 0 20px #000000;
  box-shadow: inset 0 5px 20px #000000;
  background-image: url("/build/css/images/gray_sand.png");
  display: inline-block;
  
  h1{
    float: left;
    font-family: 'Fjalla One';
    font-size: 25px;
    padding: 30px 0 0 20px;
    color: #888888;
    font-weight: bold;
  }
  h2 {
    font-family: 'Fjalla One';
    font-size: 25px;
    float: left;
    padding: 30px 0 0 10px;
    color: #888888; 
    font-weight: normal;
  }
  hr {
    width: 90%;
    display: block;
    float: left;
    margin-top: 10px;
    margin-bottom: 0px;
    margin-left: 15px;
    border-style: inset;
    border-width: 1px;
  }
  p{
    float: left;
    width: 90%;
    margin-left: 10px;
    font-family: 'Fjalla One';
    font-size: 18px;
    padding: 20px 0 0 10px;
    color: #888888; 
    font-weight: normal;
  }
  h3{
    width: 50%;
    font-family: 'Fjalla One';
    margin-left: 40%;
    font-size: 18px;
    padding: 20px 0 0 10px;
    color: #888888; 
    font-weight: normal;
    float: left;
  }
}

@media screen and (max-width:850px){

  .carousel {
    height: 300px;
    
    img{
      max-height: 300px;
    }
  }

  .menu {
    h1 {
      font-size: 21px;
      margin-top: 10px;
    }
    ul {
      width: 100%;
    }
  }
}

@media screen and (max-width:570px) {

  .carousel{
    height: 30%;
  }

  .about_page{
    padding-top: 10px;
    display: block;
    width: 100%;
    height: 950px;
    margin: 0 auto;
    
    img{
      display: block;
      width: 100%;
    }
  }
  
  .perinfo {
    width: 100%;
    h1{
      width: 100%;
      text-align: center;
      margin: 0;
      padding: 0;
    }
    hr{
      width: 95%;
      margin: 0 auto;
    }
    p{
      padding: 0 20px 0 20px;
      width: 100%;
    }
  }
  
  .contact {
    h3{
      margin-left: 0px;
      width: 80%;
      font-size: 14px;
    }
  }

  .pillars{
    display: block;
    width: 100%;
    height: 950px;
    margin: 0 auto;

    section{
      width: 100%;
      height: auto;
      margin-top: 20px;
    }
    section:first-child {
      margin-top: 90px;
    }
  }

  .nav {
    width: 100%;
    .menu {
      width: 100%;
      margin: 0 auto;
      
      h1{
        font-size: 18px;
        margin: 0 auto;
      }

      ul { 
        width: 100%;
        margin: 0;
        li:not(:first-child) {
          display: none;
        }

        li:last-child {
          display: inline-block;
          float: right;
          width: 40%;
        }

        li:first-child {
          display: inline-block;
          width: 60%;
        }

      }
      ul.responsive{
        background-image: url("/build/css/images/wavegrid.png");
        width: 100%;
        margin: 0;
        padding:0;
        position: fixed;

        li:not(:last-child) {
          width: 50%;
          float: none;
          display: inline;
          a {
            display: block;
            text-align: left;
          }
        }
        li:last-child {
          position: fixed;          
          right: 0;
          top: 15px;
          width: 20%;
        }
      }
    }
  }
}

@media screen and (min-width:1125px) {
  .appdiv{
    margin: 0 auto;
    width: 1125px;
  } 
  .nav{
    width: 1125px;
  }
}
