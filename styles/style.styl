body {
  background-image: url("/build/css/images/wavegrid.png");
  background-color: #e6f0eb;
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
  font-weight: 300;
  font-size: 15px;
}

.app_div {
  width: 100%;
}


.about_page{
  margin: 0 auto;
  margin-top: 10px;
  margin-bottom: 200px;
  width: 80%;
  height: 900px;
  padding-top: 30px;
}


.contact {
  width: 100%
  height: 300px;
  background-color: blue;
  -moz-box-shadow: inset 0 0 20px #000000;
  -webkit-box-shadow: inset 0 0 20px #000000;
  box-shadow: inset 0 5px 20px #000000;
  background-image: url("/build/css/images/gray_sand.png");
}

.pillars {

  width: 80%;
  height: 400px;
  margin: 0 auto;
  color: #434445;
  
  section {
    text-align: center;
    display: block;
    float: left;
    width: 32.7%;
    height: 200px;
    margin: 0 auto;
    margin-left: 0.3%;
    margin-right: 0.3%;
    margin-top: 50px;
    
    img {
      width: 150px;
      height: 150px;
      border-radius: 150px;
      -webkit-border-radius: 150px;
      -moz-border-radius: 150px;
      box-shadow: 0 0 8px rgba(0, 0, 0, .8);
      -webkit-box-shadow: 0 0 8px rgba(0, 0, 0, .8);
      -moz-box-shadow: 0 0 8px rgba(0, 0, 0, .8);
    }
    
    h1 {
      font-size: 23px;
      font-weight: bold;
    }
    
    p {
      margin: 10px;
    }
  }
}

.carousel{
  width: 80%;
  margin 0 auto;
  margin-top: 110px;
  height: 320px;
  margin-bottom: 40px;
    img {
      max-height: 320px;  
      max-width: 100%; 
      top: 0;  
      bottom: 0;  
      left: 0;  
      right: 0;  
      margin: 0 auto;
    }
}

.nav{
  width: 70%;
  background-image: url("/build/css/images/wavegrid.png");
  position: fixed;
  top: 20px;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index:100;
  margin-top: 20px;
  padding-top: 5px;

  h1 {
    width: 200px;
    text-align: right;
    float: left;
    margin-top: 7px;
    margin-right: 10px;
    font-weight: 900;
    font-size: 28px; 
    color: #434445;
  }

  .menu {
    background-image: url("/build/css/images/white_carbon.png");
    background-color: #fff;
    border: 2px solid #dedede;
    border-radius: 4px;
    box-shadow: 0 4px 4px -3px rgba(0, 0, 0, 0.055);
    color: #888;
    display: block;
    overflow: hidden;
    width: 68%
    margin-top: 10px;

    ul {
      margin: 0;
      padding: 0;

      li {
        width: 25%;
        text-align: center;
        display: inline-block;
        list-style-type: none;
        -webkit-transition: all 0.2s;
        -moz-transition: all 0.2s;
        -ms-transition: all 0.2s;
        -o-transition: all 0.2s;
        transition: all 0.2s; 
        
        a {
          color: #434445;
          display: block;
          line-height: 56px;
          padding: 0 24px;
          text-decoration: none;
          font-size: 14px;
          font-weight: bold;
        }
      }

      li:last-child{
        display: none;
      }

      li:hover {
        background-color: rgb(226, 182, 182);
        cursor: pointer;

        a {
          color: rgb( 255, 255, 255 );
        }

      }

    }

  }
}

hr { 
  width: 70%;
    display: block;
    margin-top: 10px;
    margin-bottom: 0px;
    margin-left: auto;
    margin-right: auto;
    border-style: inset;
    border-width: 1px;
}

@media screen and (max-width:980px){
  .nav {

    h1 {
      font-size: 20px;
    }
    .menu {
      width: 100%;
      
    }
  }
}

@media screen and (max-width:570px) {
  
  .carousel{
    height: 30%;
  }
  
  .about_page{
    padding-top: 10px;
  }
  
  .pillars{
    display: block;
    width: 100%;
    height: 950px;
    margin: 0 auto;
    
    section{
      width: 100%;
      height: auto;
      margin-top: 20px;
    }
    section:first-child {
      margin-top: 90px;
    }
  }

  .nav {
    width: 100%;
    h1 {
      width: 140px;
    }

    .menu {
      width: 55%;
      ul { 
        li:not(:first-child) {
          display: none;
        }
        
        li:last-child {
          display: inline-block;
          float: right;
          width: 40%;
        }
        
        li:first-child {
          display: inline-block;
          width: 60%;
        }

      }
      ul.responsive{
        background-image: url("/build/css/images/white_carbon.png");
        width: 100%;
        position: fixed;
        li:not(:last-child) {
          width: 50%;
          float: none;
          display: inline;
          a {
            display: block;
            text-align: left;
          }
        }
        li:last-child {
          position: fixed;          
          right: 0;
          top: 10px;
          width: 20%;
        }
      }
    }
  }
}

@media screen and (min-width:1125px) {
  .app_div{
    width: 1125px;
    margin: 0 auto;
  }
}








nav > ul > li > div {
  background-color: rgb( 40, 44, 47 );
  border-top: 0;
  border-radius: 0 0 4px 4px;
  box-shadow: 0 2px 2px -1px rgba(0, 0, 0, 0.055);
  display: none;
  margin: 0;
  opacity: 0;
  position: absolute;
  width: 165px;
  visibility: hidden;
  
  -webkit-transiton: opacity 0.2s;
  -moz-transition: opacity 0.2s;
  -ms-transition: opacity 0.2s;
  -o-transition: opacity 0.2s;
  -transition: opacity 0.2s;
}

nav > ul > li:hover > div {
  display: block;
  opacity: 1;
  visibility: visible;
}

nav > ul > li > div ul > li {
  display: block;
}

nav > ul > li > div ul > li > a {
  color: #fff;
  display: block;
  padding: 12px 24px;
  text-decoration: none;
}

nav > ul > li > div ul > li:hover > a {
  background-color: rgba( 255, 255, 255, 0.1);
}
